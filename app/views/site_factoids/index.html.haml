%h1
  Listing site_factoids
%table
  %tr
    %th
      Organization
    %th
      Kind
    %th
      Content
    %th
      Source url
    %th
      Fruitful
  - for site_factoid in @site_factoids
  %tr
    %td
      = h site_factoid.organization_id
    %td
      = h site_factoid.kind
    %td
      = h site_factoid.content
    %td
      = h site_factoid.source_url
    %td
      = h site_factoid.fruitful
    %td
      = link_to 'Show', site_factoid
    %td
      = link_to 'Edit', edit_site_factoid_path(site_factoid)
    %td
      = link_to 'Destroy', site_factoid, :confirm =&gt; 'Are you sure?', :method =&gt; :delete
  - end
%br/
= link_to 'New site_factoid', new_site_factoid_path
